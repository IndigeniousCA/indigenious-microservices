  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "@types/sanitize-html": "^2.9.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/bad-words": "^3.0.3",
