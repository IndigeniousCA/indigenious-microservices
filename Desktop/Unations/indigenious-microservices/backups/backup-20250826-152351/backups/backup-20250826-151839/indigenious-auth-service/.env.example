# Service Configuration
NODE_ENV=development
PORT=3001
SERVICE_NAME=auth

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/indigenious_auth

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AWS Configuration (for SES email)
AWS_REGION=ca-central-1
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret

# Email Configuration
EMAIL_FROM=noreply@indigenious.ca
EMAIL_REPLY_TO=support@indigenious.ca

# MFA Configuration
MFA_ISSUER=Indigenious Platform

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_QUERIES=false

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# Indigenous Verification API (if external service)
INDIGENOUS_VERIFICATION_API_URL=
INDIGENOUS_VERIFICATION_API_KEY=