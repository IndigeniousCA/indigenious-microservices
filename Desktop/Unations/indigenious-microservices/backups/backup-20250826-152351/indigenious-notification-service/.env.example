# Application
NODE_ENV=development
PORT=3007
JWT_SECRET=your-jwt-secret-here
APP_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/notifications

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email - SendGrid
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@indigenous.ca

# Email - AWS SES (Alternative)
# EMAIL_PROVIDER=ses
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# SMS - Twilio
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_MESSAGING_SERVICE_SID=your-messaging-service-sid

# SMS - AWS SNS (Alternative)
# SMS_PROVIDER=sns
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# Push Notifications - Firebase
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project"}

# Push Notifications - Web Push
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:push@indigenous.ca

# Monitoring
LOG_LEVEL=info
METRICS_PORT=9090

# Support
SUPPORT_EMAIL=support@indigenous.ca