# Payment Service Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3005
APP_URL=http://localhost:3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://payment_user:payment_pass@localhost:5433/payment_db

# Redis
REDIS_URL=redis://:redis_password@localhost:6380

# JWT & Security
JWT_SECRET=your_jwt_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Stripe (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_INDIGENOUS_SME=price_indigenous_sme
STRIPE_PRICE_ID_LARGE_INDIGENOUS=price_large_indigenous
STRIPE_PRICE_ID_CANADIAN=price_canadian_business
STRIPE_PRICE_ID_GOVERNMENT=price_government_license

# Interac (contact Interac for API access)
INTERAC_API_URL=https://api.interac.ca/v1
INTERAC_MERCHANT_ID=your_merchant_id
INTERAC_API_KEY=your_api_key
INTERAC_SECRET_KEY=your_secret_key
INTERAC_WEBHOOK_SECRET=your_webhook_secret

# PayPal (get from https://developer.paypal.com/dashboard)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox # or 'live' for production
PAYPAL_WEBHOOK_ID=your_webhook_id

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@indigenous.ca

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_QUICK_PAY=true
ENABLE_BULK_PAYMENTS=true
ENABLE_TAX_EXEMPTION_AUTO_CHECK=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=10

# Business Email (for Interac requests)
BUSINESS_EMAIL=payments@indigenous.ca