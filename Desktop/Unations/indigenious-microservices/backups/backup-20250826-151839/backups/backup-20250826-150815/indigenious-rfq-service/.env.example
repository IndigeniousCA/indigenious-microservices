# Server Configuration
NODE_ENV=development
PORT=3004

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/indigenious_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
NOTIFICATION_SERVICE_URL=http://localhost:3007
BUSINESS_SERVICE_URL=http://localhost:3003

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
INTERNAL_SERVICE_TOKEN=your-internal-service-token-change-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_QUERIES=false

# File Upload
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=indigenious-documents

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Feature Flags
ENABLE_ELASTICSEARCH=true
ENABLE_REDIS_CACHE=true
ENABLE_RATE_LIMITING=true