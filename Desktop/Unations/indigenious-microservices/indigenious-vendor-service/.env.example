# Database
DATABASE_URL="postgresql://vendor_user:vendor_pass@localhost:5436/indigenous_vendor_db"

# Redis
REDIS_URL="redis://localhost:6385"

# Server
PORT=3030
NODE_ENV=development

# Security
JWT_SECRET="your-jwt-secret-key-here"
ENCRYPTION_KEY="your-encryption-key-here"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Indigenous Services Integration
STATUS_CARD_VALIDATION_API="https://api.indigenous.gc.ca/status-card/validate"
BAND_REGISTRY_API="https://api.indigenous.gc.ca/band-registry"
TREATY_LOOKUP_API="https://api.indigenous.gc.ca/treaties"

# Logging
LOG_LEVEL=info
LOG_FILE=vendor-service.log

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Business Intelligence
CREDIT_SCORING_API="https://api.creditbureau.ca/score"
BUSINESS_REGISTRY_API="https://api.corporationscanada.ic.gc.ca"

# Notifications
NOTIFICATION_SERVICE_URL="http://notification-service:3015"
EMAIL_TEMPLATES_PATH="./templates"

# Reporting
REPORT_STORAGE_PATH="./reports"
PDF_GENERATION_SERVICE="http://pdf-service:3040"

# Compliance
COMPLIANCE_CHECK_INTERVAL=86400000
AUTO_VERIFY_THRESHOLD=90

# Performance Metrics
PERFORMANCE_REVIEW_INTERVAL=90
PERFORMANCE_THRESHOLD_EXCELLENT=4.5
PERFORMANCE_THRESHOLD_GOOD=4.0

# Indigenous Procurement Mandate
MANDATE_TARGET_PERCENTAGE=5
MANDATE_REPORTING_FREQUENCY="quarterly"

# Geolocation
MAPS_API_KEY="your-maps-api-key"
DISTANCE_CALCULATION_SERVICE="https://api.mapbox.com"

# Document Management
DOCUMENT_STORAGE_TYPE="local"
DOCUMENT_ENCRYPTION=true
DOCUMENT_RETENTION_YEARS=7